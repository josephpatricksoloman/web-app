pipeline {
    agent any

    environment {
        IMAGE_TAG = ''
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    def branchName = "${env.GIT_BRANCH}".replace("origin/", "")
                    echo "Current branch: ${branchName}"
                    IMAGE_TAG = "josephpatricksoloman/${branchName == 'dev' ? 'dev' : 'prod'}:latest"
                    git branch: branchName, url: 'https://github.com/josephpatricksoloman/web-app.git'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'bash build.sh'
                    sh 'docker build -t web .'
                }
            }
        }

        stage('Push to Docker Hub') {
            when {
                anyOf {
                    branch 'master'  // Push when on master
                    branch 'dev'     // Push when on dev
                }
            }
            steps {
                script {
                    echo "Pushing image with tag: ${IMAGE_TAG}"
                    sh "docker tag web ${IMAGE_TAG}"
                    
                    withCredentials([usernamePassword(credentialsId: 'jose_dockerhub', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin"
                        sh "docker push ${IMAGE_TAG}"
                    }
                }
            }
        }
    }
}
