pipeline {
    agent any

    environment {
        IMAGE_TAG = ''
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    def branchName = "${env.GIT_BRANCH}".replace("origin/", "")
                    echo "Current branch: ${branchName}"  // Print the branch name

                    // Set IMAGE_TAG based on the branch name
                    if (branchName == 'dev') {
                        IMAGE_TAG = "josephpatricksoloman/dev:latest"
                    } else if (branchName == 'main') {
                        IMAGE_TAG = "josephpatricksoloman/prod:latest"
                    } else {
                        error "Branch ${branchName} is not supported for Docker push."
                    }

                    git branch: branchName, url: 'https://github.com/josephpatricksoloman/web-app.git'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'bash build.sh'
                    sh 'docker build -t web .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    echo "Pushing image with tag: ${IMAGE_TAG}"  // Print the image tag being pushed
                    sh "docker tag web ${IMAGE_TAG}"

                    withCredentials([usernamePassword(credentialsId: 'jose_dockerhub', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin"
                        sh "docker push ${IMAGE_TAG}"
                    }
                }
            }
        }
    }

    post {
        success {
            script {
                // Check if the build was triggered by a merge from dev to master
                if (env.GIT_BRANCH == 'main' && env.CHANGE_ID) {
                    echo "Detected merge from dev to main. Pushing to prod repository."

                    // Push to production repository if on master
                    IMAGE_TAG = "josephpatricksoloman/prod:latest"
                    sh "docker tag web ${IMAGE_TAG}"

                    withCredentials([usernamePassword(credentialsId: 'jose_dockerhub', passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
                        sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin"
                        sh "docker push ${IMAGE_TAG}"
                    }
                }
            }
        }
    }
}
